<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.Weeabooify">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextAppearance="@style/Toolbar.TitleText.Collapsed"
        app:collapsedTitleTextColor="@color/textColorPrimary"
        app:contentScrim="@color/transparent"
        app:expandedTitleMarginBottom="10dp"
        app:expandedTitleMarginStart="24dp"
        app:expandedTitleTextAppearance="@style/Toolbar.TitleText.Expanded"
        app:expandedTitleTextColor="@color/textColorPrimary"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:extraMultilineHeightEnabled="true"
        app:forceApplySystemWindowInsetTop="true"
        app:titleCollapseMode="fade"
        app:title="Uwuify">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:paddingStart="5dp"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_left"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>