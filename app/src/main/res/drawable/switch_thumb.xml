<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="6dp" android:end="0dp" android:start="6dp" android:top="6dp">
                <shape android:shape="oval">
                    <solid android:color="@color/switch_thumb_inactive" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="6dp" android:end="6dp" android:start="0dp" android:top="6dp">
                <shape android:shape="oval">
                    <solid android:color="@color/switch_thumb_active" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>