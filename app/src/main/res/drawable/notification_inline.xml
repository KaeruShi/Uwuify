<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item>
        <shape>
            <solid android:color="@color/colorContainer" />
            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/colorAccent" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/stroke_width"
        android:left="@dimen/stroke_width"
        android:right="@dimen/stroke_width"
        android:top="@dimen/stroke_width">
        <shape>
            <solid android:color="@color/colorContainer" />
            <stroke
                android:width="2dp"
                android:color="@color/textColorPrimary" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</ripple>